<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Implementation</th>
      <th>Processed date</th>
      <th>Contracted amount</th>
      <th>Contracted hours</th>
      <th>Document</th>
      <th>Done hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.implementation %></td>
        <td><%= invoice.processed_date %></td>
        <td><%= invoice.contracted_amount %></td>
        <td><%= invoice.contracted_hours %></td>
        <td><%= invoice.document %></td>
        <td><%= invoice.done_hours %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

